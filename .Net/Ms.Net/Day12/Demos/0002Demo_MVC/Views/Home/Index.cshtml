@model List<_0002Demo_MVC.Models.Emp>
<html>
<head>
    <title>Welcome to MVC</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body class="container">
    
      <div class="text-center">
          <br />
            <div style="text-align:left">
            <a href="/Home/Create" class="btn btn-primary">Add Record</a>
            </div>
         <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.No</td>
                        <td>@emp.Name</td>
                        <td>@emp.Address</td>
                        <td>
                            <a href="/Home/Edit/@emp.No" class="btn btn-warning">Edit</a>
                        </td>
                        <td>
                            <a href="/Home/Delete/@emp.No" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
      </div> 
</body>
</html>